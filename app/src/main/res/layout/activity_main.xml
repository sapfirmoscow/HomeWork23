<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/to_animation_drawable_button1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/to_animation_drawable_button3"
        app:layout_constraintTop_toTopOf="@+id/to_animation_drawable_button2" />

    <Button
        android:id="@+id/to_animation_drawable_button2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@+id/to_animation_drawable_button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/to_animation_drawable_button4"
        app:layout_constraintTop_toTopOf="@+id/to_animation_drawable_button3" />

    <Button
        android:id="@+id/to_animation_drawable_button3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintEnd_toStartOf="@+id/to_animation_drawable_button1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/to_animation_drawable_button2"
        app:layout_constraintTop_toTopOf="@+id/to_animation_drawable_button4" />

    <Button
        android:id="@+id/to_animation_drawable_button4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/to_animation_drawable_button2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/to_animation_drawable_button5"
        app:layout_constraintTop_toTopOf="@+id/to_animation_drawable_button5" />

    <Button
        android:id="@+id/to_animation_drawable_button5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@+id/to_animation_drawable_button4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/to_animation_drawable_button6"
        app:layout_constraintTop_toTopOf="@+id/to_animation_drawable_button6" />

    <Button
        android:id="@+id/to_animation_drawable_button6"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="6"
        app:layout_constraintEnd_toStartOf="@+id/to_animation_drawable_button5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/to_animation_drawable_button7"
        app:layout_constraintTop_toTopOf="@+id/to_animation_drawable_button7" />

    <Button
        android:id="@+id/to_animation_drawable_button7"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@+id/to_animation_drawable_button6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_animation_drawable_button1" />

</android.support.constraint.ConstraintLayout>