<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/yellowSquare"
        android:layout_width="@dimen/greenSquare_side"
        android:layout_height="@dimen/greenSquare_side"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redSquare" />

    <View
        android:id="@+id/redSquare"
        android:layout_width="@dimen/redSquare_side"
        android:layout_height="@dimen/redSquare_side"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/red"
        app:layout_constraintBottom_toTopOf="@+id/yellowSquare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blueSquare" />

    <View
        android:id="@+id/blueSquare"
        android:layout_width="@dimen/blueSquare_side"
        android:layout_height="@dimen/blueSquare_side"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toTopOf="@+id/redSquare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>